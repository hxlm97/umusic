.comment {
  padding: 10px 10px 0;
}
.comment .hot-comment {
  margin-bottom: 20px;
}
.comment .comments {
  margin-bottom: 50px;
}
.comment .list .item {
  padding-top: 10px;
  border-bottom: 1px solid #eee;
}
.comment .list .item .info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.comment .list .item .info .icon {
  margin-right: 10px;
}
.comment .list .item .info .icon image {
  width: 50px;
  height: 50px;
}
.comment .list .item .info .desc {
  height: 50px;
}
.comment .list .item .info .desc .user {
  font-size: 14px;
}
.comment .list .item .info .desc .time {
  font-size: 12px;
  color: #666;
}
.comment .list .item .content {
  margin: 0 0 10px 60px;
  padding: 5px 0;
}
.comment .comment-area {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 750rpx;
  height: 50px;
  line-height: 50px;
  position: fixed;
  bottom: 0;
  background: #fff;
}
.comment .comment-area image {
  margin-top: 10px;
  width: 30px;
  height: 30px;
}
.comment .comment-area input {
  margin: 10px;
  width: 500rpx;
  height: 30px;
  font-size: 14px;
  background: #f9f9f9;
  border-radius: 15px;
}
.comment .comment-area .uni-input-wrapper,
.comment .comment-area .uni-input-input,
.comment .comment-area .uni-input-form,
.comment .comment-area .uni-input-placeholder {
  padding-left: 5px;
}
.comment .comment-area button {
  margin: 10px 20px 10px 0;
  width: 60px;
  height: 30px;
  font-size: 12px;
  border-radius: 15px;
}
.comment .comment-area .uni-button:after {
  border: 0!important;
}

